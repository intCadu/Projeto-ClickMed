Screen:
    BoxLayout:
        orientation: 'vertical'

<login>:
    MDFloatLayout:
        radius: [0, 0, 0, 0]
        md_bg_color: app.theme_cls.primary_light
        Image:
            source: 'Images/bgLogin.jpg'
            resizable: True
            allow_stretch: True
            size_hint: 1.4, 1.4
            pos_hint: {'center_x':0.5,'center_y':0.5}
        
        MDCard:
            id: card
            orientation: 'vertical'
            size_hint: .35,.8
            pos_hint: {'center_x':.3,'center_y':.5}
            radius: [25,25,25,25]   
            elevation: 2 

            MDFloatLayout:
                Image:
                    source: 'Images/logoFull.png'
                    allow_stretch: False
                    size_hint:0.82, 0.30
                    pos_hint: {'center_x':0.50,'center_y':0.75}

                MDTextField:
                    size_hint_x: .6
                    allow_stretch: False
                    hint_text: 'Usu√°rio'
                    pos_hint: {'center_x':.5,'center_y':.5}
                    icon_right: 'account'
                    icon_right_color: app.theme_cls.primary_color
                    mode: 'round'
                    hint_text_color_normal: 'black'
                    max_text_length: 25

                MDTextField:
                    id: text_password
                    size_hint_x: .6
                    allow_stretch: False
                    hint_text: 'Senha'
                    pos_hint: {'center_x':.5,'center_y':.4}
                    icon_right: 'lock'
                    icon_right_color: app.theme_cls.primary_color
                    mode: 'round'
                    hint_text_color_normal: 'black'
                    password: True
                    max_text_length: 25
        
                ButtonFocus:
                    size_hint_x: .3
                    pos_hint: {'center_x':.5,'center_y':.3}
                    text: 'Login'
                    text_color: 'black'
                    focus_color: app.theme_cls.accent_color
                    unfocus_color: '#55C4BE'
                    on_release: 
                        root.login()
                        root.manager.transition.direction = 'left'

                MDFloatingActionButton:
                    theme_text_color: 'Custom'
                    specific_text_color: app.theme_cls.primary_color
                    pos_hint: {'center_x':.65,'center_y':.15}
                    allow_stretch: True
                    text_color: 'black'
                    icon: 'account-plus'
                    md_bg_color: '#55C4BE'
                    elevation_normal: 8
                    on_release: 
                        root.goRegister()
                        root.manager.transition.direction = 'left'

                MDFloatingActionButton:
                    theme_text_color: 'Custom'
                    specific_text_color: app.theme_cls.primary_color
                    pos_hint: {'center_x':.35,'center_y':.15}
                    allow_stretch: True
                    text_color: 'black'
                    icon: 'lock-question'
                    md_bg_color: '#55C4BE'
                    elevation_normal: 8
                    on_release: 
                        root.newPassword()
                        root.manager.transition.direction = 'left'
