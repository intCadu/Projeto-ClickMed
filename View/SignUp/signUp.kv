Screen:
    BoxLayout:
        orientation: 'vertical'
        signUp:

<signUp>: 
    MDFloatLayout:
        Image:
            source: 'Images/bgCadastro.jpg'
            resizable: True
            allow_stretch: True
            size_hint: 1.75, 1.75
            pos_hint: {'center_x':0.5,'center_y':0.5}

        MDCard:
            id: card
            orientation: 'vertical'
            size_hint: .4,.85
            pos_hint: {'center_x':.5,'center_y':.5}
            radius: [25,25,25,25]   
            elevation: 2
            
            MDFloatLayout:
                Image:
                    source: 'Images/logoFull.png'
                    allow_stretch: False
                    size_hint:0.82, 0.30
                    pos_hint: {'center_x':0.5,'center_y':0.8}

                MDTextField:
                    size_hint_x: .5
                    pos_hint: {'center_x': .5, 'center_y': .6}
                    hint_text: 'Nome'
                    mode: 'round'
                    icon_left: 'account'
                    hint_text_color_normal: 'black'
                    max_text_length: 25

                MDTextField:
                    size_hint_x: .5
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    hint_text: 'Email'
                    helper_text: 'Exemplo@gmail.com'
                    helper_text_mode: 'persistent'
                    mode: 'round'
                    icon_left: 'email'
                    hint_text_color_normal: 'black'
                    max_text_length: 50

                MDTextField:
                    pos_hint: {'center_x': .5, 'center_y': .4}
                    size_hint_x: .5
                    hint_text: 'Senha'
                    mode: 'round'
                    icon_left: 'lock'
                    password: True
                    hint_text_color_normal: 'black'
                    max_text_length: 25

                MDTextField:
                    pos_hint: {'center_x': .5, 'center_y': .3}
                    size_hint_x: .5
                    hint_text: 'Confirmar senha'
                    mode: 'round'
                    icon_left: 'lock'
                    password: True
                    hint_text_color_normal: 'black'
                    max_text_length: 25

                ButtonFocus:
                    pos_hint: {'center_x': .5, 'center_y': .2}
                    size_hint_x: .3
                    ripple_behavior: True
                    text: 'Cadastrar'
                    mode: 'round'
                    focus_color: app.theme_cls.accent_color
                    unfocus_color: '#55C4BE'
                    on_release: 
                        root.register()
                        root.manager.transition.direction = 'right'
                        
                MDFloatingActionButton:
                    pos_hint: {'center_x':0.5,'center_y':0.08}    
                    theme_text_color: 'Custom'
                    specific_text_color: app.theme_cls.primary_color
                    allow_stretch: True
                    text_color: 'black'
                    icon: 'arrow-left'
                    md_bg_color: '#55C4BE'
                    elevation_normal: 8
                    on_release: 
                        root.goLogin()
                        root.manager.transition.direction = 'right'
